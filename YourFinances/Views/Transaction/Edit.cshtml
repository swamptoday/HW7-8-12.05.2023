@model YourFinances.Domain.Entities.Transaction

@{
    ViewData["Title"] = "Create/Edit";
}
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

    <h4>Transaction</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Transaction" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label type="hidden" asp-for="transaction_id" />
                    <input type="hidden" asp-for="transaction_id" />
                    <div asp-validation-summary="All"></div>
                </div>
                <div class="form-group">
                    <label asp-for="category_id">Category:</label>
                    <select asp-for="category_id" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <div asp-validation-summary="All"></div>
                </div>
                <div class="form-group">
                    <label asp-for="cost" class="control-label">Cost: </label>
                    <input asp-for="cost" class="form-control" />
                    <span asp-validation-for="cost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="date" class="control-label">Date: </label>
                    <input type="datetime" asp-for="date" class="form-control" />
                    <span asp-validation-for="date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="comment" class="control-label">Comment(optional): </label>
                    <input type="text" asp-for="comment" class="form-control" />
                    <span asp-validation-for="comment" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create/Modify" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Home" asp-action="Index">Back to Main</a>
    </div>
</div>
